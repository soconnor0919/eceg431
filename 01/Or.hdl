/**
 * Or gate:
 * if (a or b) out = 1, else out = 0
 */
CHIP Or {
    IN a, b;
    OUT out;

    PARTS:
    // Or(a,b) = Not(And(Not(a), Not(b))) - De Morgan's law
    Not(in=a, out=notA);
    Not(in=b, out=notB);
    And(a=notA, b=notB, out=andOut);
    Not(in=andOut, out=out);
}
