/**
 * Demultiplexor:
 * [a, b] = [in, 0] if sel = 0
 *          [0, in] if sel = 1
 */
CHIP DMux {
    IN in, sel;
    OUT a, b;

    PARTS:
    // invert sel
    Not(in=sel, out=notSel);
    // when sel=0: a gets in
    And(a=in, b=notSel, out=a);
    // when sel=1: b gets in
    And(a=in, b=sel, out=b);
}
